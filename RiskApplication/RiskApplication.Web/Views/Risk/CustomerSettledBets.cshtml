@model IEnumerable<RiskApplication.Web.Models.CustomerVewModel>

<h2>Customers Statistics</h2>
<table class="table table-bordered table-hover" id="statistics">
    <thead class="thead-inverse">
    <tr>
        <th>Customer</th>
        <th>Average stake</th>
        <th>Total wins</th>
        <th>Total bets</th>
        <th>Winning percentage</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr class='@(item.WinningPercentage > 60 ? "danger" : "info")'>
            <td class="col-md-2">@item.Id</td>
            <td class="col-md-2">@item.AverageStake.ToString("N")$</td>
            <td class="col-md-2">@item.TotalBetsWon</td>
            <td class="col-md-2">@item.TotalBets</td>
            <td class="col-md-4">@item.WinningPercentage.ToString("N")%</td>
        </tr>
    }
    </tbody>
</table>

<div id="settledBets">

</div>

@section scripts
{
    <script src="~/Scripts/MasterDetail.js"> </script>
}